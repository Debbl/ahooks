{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "pretty": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["packages"]
}
